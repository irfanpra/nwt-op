<div class="container">

  <!-- Main hero unit for a primary marketing message or call to action -->
  <div class="hero-unit">
<h1>Korisnici</h1>
<br>
<div class="table-responsive">
<table >
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="table table-condensed">
    <% @users.each do |user| %>
      <tr>
      	<td><%= image_tag(user.avatar_url) if user.avatar? %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New User', new_user_path, class: "btn btn-success" %>
</div>
</div>
